<style media="screen">
  table {

  }

  td:first-child {
    text-align: right;
    padding-right: 20px;
  }

  td:last-child {
    text-align: left;
    padding-left: 20px;
  }
</style>

<main>
  <table>
    <%- for user in @users %>
      <tr>
        <td>
          <%= "#{user.forename} #{user.surname[0]}" %>
        </td>
        <td>
          <%= "#{(@totals[user] / 1000).round(2)} km" %>
        </td>
      </tr>
    <%- end %>
  </table>
</main>
